def init_db():
    conn = sqlite3.connect("users.db")
    c = conn.cursor()
    # Add points column if it doesnâ€™t exist
    c.execute('''
        CREATE TABLE IF NOT EXISTS users (
            username TEXT PRIMARY KEY,
            password TEXT,
            role TEXT,
            points INTEGER DEFAULT 0
        )
    ''')
    conn.commit()
    conn.close()
